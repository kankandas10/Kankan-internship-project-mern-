pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t my-app-image .'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run --rm my-app-image'
            }
        }
    }

    post {
        always {
            sh 'docker rmi -f my-app-image || true'
        }
    }
}
